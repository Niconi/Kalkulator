<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".CalculatorFragment">

    <!-- Input Nilai Tugas -->
    <EditText
        android:id="@+id/etTugas"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="32dp"
        android:minWidth="240dp"
        android:background="@android:color/transparent"
        android:hint="Input Nilai Tugas"
        android:inputType="numberDecimal"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray"
        android:gravity="start|center_vertical"
        android:paddingBottom="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Line under Tugas -->
    <View
        android:id="@+id/lineTugas"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="@id/etTugas"
        app:layout_constraintStart_toStartOf="@id/etTugas"
        app:layout_constraintTop_toBottomOf="@id/etTugas" />

    <!-- Input Nilai UTS -->
    <EditText
        android:id="@+id/etUTS"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:minWidth="240dp"
        android:background="@android:color/transparent"
        android:hint="Input Nilai UTS"
        android:inputType="numberDecimal"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray"
        android:gravity="start|center_vertical"
        android:paddingBottom="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lineTugas" />

    <!-- Line under UTS -->
    <View
        android:id="@+id/lineUTS"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="@id/etUTS"
        app:layout_constraintStart_toStartOf="@id/etUTS"
        app:layout_constraintTop_toBottomOf="@id/etUTS" />

    <!-- Input Nilai UAS -->
    <EditText
        android:id="@+id/etUAS"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:minWidth="240dp"
        android:background="@android:color/transparent"
        android:hint="Input Nilai UAS"
        android:inputType="numberDecimal"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray"
        android:gravity="start|center_vertical"
        android:paddingBottom="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lineUTS" />

    <!-- Line under UAS -->
    <View
        android:id="@+id/lineUAS"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="@id/etUAS"
        app:layout_constraintStart_toStartOf="@id/etUAS"
        app:layout_constraintTop_toBottomOf="@id/etUAS" />

    <!-- Button Hitung Nilai Akhir -->
    <Button
        android:id="@+id/btnHitung"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/button_rounded"
        android:paddingHorizontal="24dp"
        android:paddingVertical="12dp"
        android:text="HITUNG NILAI AKHIR"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lineUAS" />

    <!-- Hasil Perhitungan -->
    <TextView
        android:id="@+id/tvHasil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:textColor="@android:color/black"
        android:textSize="48sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnHitung"
        tools:text="72"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>
